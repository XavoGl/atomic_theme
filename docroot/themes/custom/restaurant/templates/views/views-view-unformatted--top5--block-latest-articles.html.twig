{#
/**
 * @file
 * Theme override to display a view of unformatted rows.
 *
 * Available variables:
 * - title: The title of this group of rows. May be empty.
 * - rows: A list of the view's row items.
 *   - attributes: The row's HTML attributes.
 *   - content: The row's content.
 * - view: The view object.
 * - default_row_class: A flag indicating whether default classes should be
 *   used on rows.
 *
 * @see template_preprocess_views_view_unformatted()
 */
#}

{% for row in rows %}
{% if loop.index==1 %}
  {#{ kint(row.content['#row']._entity.getCreatedTime|date('d-m-Y')) }#}
{% endif %}
  {#{ kint(row.content['#row']._entity|keys) }#}
<div class="region__sidebar-wrapper">
    <div class="region__sidebar-titulo">
      <h3><a href="#">{{ row.content['#row']._entity.title.value }}</a></h3>
    </div>
    <div class="region__sidebar-fecha">
      {{ row.content['#row']._entity.getCreatedTime|date('d-m-Y') }}
    </div>
    <div class="region__sidebar-categoria">
      {{ row.content['#row']._entity.field_categoria.entity.name.value }}
    </div>
    <div class="region__sidebar-imagen">
      <img src={{ row.content['#row']._entity.field_image.entity.field_media_image.0.entity.uri.0.value|image_style('barraderecha') }}/>
    </div>
</div>
  {#{ kint(row.content['#row']._entity.field_image.entity.field_media_image.0.entity.uri.0.value) }#}
  {#{kint(row.content['#row']._entity.field_image.entity.field_media_image.0.entity.uri.0.value)}#}
  {#{kint(row.content['#row']._entity.field_categoria.entity|keys)}#}
  {#{kint(row.content['#row']._entity.field_image.entity|keys)}#}
{% endfor %}
